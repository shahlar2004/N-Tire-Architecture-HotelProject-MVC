
@{
    Layout = null;
}

@model UserLoginDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="Stil/LoginStil.css">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/sneat-1.0.0/assets/css/loginstil.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

</head>
<body style="overflow: hidden;">
    <div id="login-container">
        <div class="login-page">
            <div class="form">
                <form class="register-form">

                    <input type="text" placeholder="name" id="personName" />
                    <input type="text" placeholder="surname" id="personSurname" />
                    <input type="tel" placeholder="phone" pattern="[0-9]{3}[0-9]{3}[0-9]{2}[0-9]{2}" id="personNumber" />
                    <input required pattern="[a-z0-9]+@@[a-z]+\.[a-z]{2,3}" placeholder="email address" id="personEmail" />
                    <input type="text" placeholder="username" id="personUsername" />
                    <div class="password-icon">
                        <input type="password" class="pas-con" placeholder="password" id="personPassword" />
                        <div class="show-hide">
                            <i class="fa-solid fa-eye"></i>
                        </div>
                    </div>


                    <button id="createUser">create</button>
                    <p class="message hidesignin">Already registered? <a href="#">Sign In</a></p>
                </form>


                <form asp-controller="Auth" asp-action="Login" class="login-form" method="post">
                    <div asp-validation-summary="All"></div>


                    <label style="display:block ;text-align:left ;margin-bottom:5px" asp-for="Email">Email Adresi</label>
                    <input asp-for="Email" name="Email" id="userName" type="email" placeholder="Email daxil et" />


                    <div>
                        <label style="display:block !important;text-align:left !important; margin-bottom:5px" asp-for="Email">Password</label>
                        <div class="password-icon">
                            <input asp-for="Password" for="Password" id="password" type="password" class="pas-con" name="password" placeholder="password" />
                            <div class="show-hide">
                                <i class="fa-solid fa-eye"></i>
                            </div>
                        </div>

                    </div>

                    <input asp-for="RememberMe" type="checkbox" style="width:10% !important" id="rememberMe"> <labe asp-for="RememberMe" l for="RememberMe">Remember</labe>


                    <div class="hide-loginbtn">
                        <button id="loginbutton" type="submit">login</button>
                        <p class="message" id="register">Not registered? <a href="#">Create an account</a></p>
                    </div>
                </form>
                <div class="button-p">
                    <p class="messagee" id="changepassword">Parolu unutdun?<a href="#"> Parolu dəyiş</a></p>
                </div>

                <form class="reset-password">
                    <input type="text" required pattern="[a-z0-9]+@@[a-z]+\.[a-z]{2,3}" placeholder="email address" id="myEmailAddres">
                    <div class="password-icon">
                        <input type="password" id="newPassword" class="pas-con" placeholder="new password" />
                        <div class="show-hide">
                            <i class="fa-solid fa-eye"></i>
                        </div>
                    </div>


                    <button id="resetPassword">Reset password</button>
                </form>
            </div>
        </div>

    </div>
    <script src="~/sneat-1.0.0/js/loginpanel.js"></script>
    <script src="~/sneat-1.0.0/js/commonjs.js"></script>


</body>
</html>

