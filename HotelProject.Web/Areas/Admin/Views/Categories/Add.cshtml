
@model CategoryAddDTO

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light"> Category Management /</span> Category
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">

                <form asp-area="Admin" asp-controller="Categories" asp-action="Add"  method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="display:none !important"></div>
                    <div class="card-body">

                        <div class="mt-2" class="form-group">
                            <label asp-for="Name" for="defaultFormControlInput" class="form-label mt-3">Kontent</label>
                            <input asp-for="Name" type="text" placeholder="Name..." class="form-control" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button class="btn btn-success" type="submit">Yadda saxla</button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>